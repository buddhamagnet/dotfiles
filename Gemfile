source 'https://rubygems.org'

# RAILS
gem 'rails', '4.2.0'

# API
gem 'jbuilder', '~> 2.0'

# FRONT END
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'sass-rails', '~> 5.0'
gem 'turbolinks'
gem 'uglifier', '>= 1.3.0'

# DEVELOPMENT AND TEST PLATFORMS
group :development, :stage do
  gem 'pry-rails'
end

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

# DOCUMENTATION
group :doc do
  gem 'sdoc', '~> 0.4.0'
end

