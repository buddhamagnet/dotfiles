[user]
	name = buddhamagnet
	email = buddhamagnet@gmail.com
[apply]
	whitespace = nowarn
[alias]
	co = checkout
	br = branch
	cm = commit
        slog = log --pretty=oneline
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[core]
        excludesfile = ~/.gitignore
        editor = /bin/vi
        autocrlf = input
        safecrlf = true
[color]
        ui =auto
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
